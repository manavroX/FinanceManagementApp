<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentExpense"
    android:background="@color/pink">

    <!-- TODO: Update blank fragment layout -->
<!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:text="Input Your Expenses Here"-->
<!--        android:gravity="center"-->
<!--        android:textColor="@color/black"-->
<!--        android:textSize="20dp"-->
<!--        />-->

    <TextView
        android:id="@+id/exptexttitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Insert Expense Details"
        android:textAlignment="center"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/need"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exptexttitle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="54dp"
        android:text="Need"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/want"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exptexttitle"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="110dp"
        android:text="Want"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/exptitletxt"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exptexttitle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="130dp"
        android:text="Title"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/expvaluetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exptitletxt"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="60dp"
        android:text="Value"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/expcategorytxt"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expvaluetxt"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="60dp"
        android:text="Category"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/expdatetxt"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expcategorytxt"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="60dp"
        android:text="Date"
        android:textSize="18dp" />


    <EditText
        android:id="@+id/exptitle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exptexttitle"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="60dp"
        android:hint="Title"
        android:inputType="textPersonName"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/expvalue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exptitle"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="60dp"
        android:hint="Value"
        android:inputType="number"
        android:textSize="18dp" />

    <Spinner
        android:id="@+id/expcategory"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expvalue"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:hint="Category"
        android:textSize="18dp"
        android:spinnerMode="dropdown"/>

    <EditText
        android:id="@+id/expdate"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expcategory"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="60dp"
        android:hint="yyyy/mm/dd"
        />

    <Button
        android:id="@+id/btnInsertExpense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp"
        android:backgroundTint="#F1C179"
        android:text="Done"
        android:textSize="24dp" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/needwantswitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exptexttitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="163dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="176dp" />
</RelativeLayout>