    <TextView
        android:id="@+id/earntexttitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Insert Earning Details"
        android:textAlignment="center"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/earntitletxt"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/earntexttitle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="130dp"
        android:text="Title"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/earnvaluetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/earntitletxt"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="60dp"
        android:text="Value"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/earncategorytxt"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/earnvaluetxt"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="60dp"
        android:text="Category"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/earndatetxt"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/earncategorytxt"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="60dp"
        android:text="Date"
        android:textSize="18dp" />


    <EditText
        android:id="@+id/earntitle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/earntexttitle"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="60dp"
        android:hint="Title"
        android:inputType="textPersonName"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/earnvalue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/earntitle"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="60dp"
        android:hint="Value"
        android:inputType="number"
        android:textSize="18dp" />

    <Spinner
        android:id="@+id/earncategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/earnvalue"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="60dp"
        android:hint="Category"
        android:textSize="18dp"
        android:spinnerMode="dropdown"/>

    <EditText
        android:id="@+id/earndate"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/earncategory"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="60dp"
        android:hint="yyyy/mm/dd"
        android:inputType="number"
        android:textSize="18dp" />



    <Button
        android:id="@+id/btnInsertEarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp"
        android:backgroundTint="#F1C179"
        android:text="Done"
        android:textSize="24dp" />


</RelativeLayout>